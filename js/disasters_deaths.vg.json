{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"data": {
		"url": "https://raw.githubusercontent.com/OliverVoogd/FIT3179A2/master/data/emdat_trimmed_joined_sedac_datefixed.csv"
	},
	"width": 500,
	"height": 256,
	"title": "Total Deaths For Each Disaster",
	"transform": [{"filter": "datum.date != NaN"}],
		"mark": {
		"type": "circle",
		"stroke": "black",
		"opacity": 0.5,
		"strokeWidth": 0.2
	},
	"encoding": {
		"x": {"field": "date", "type": "temporal", "title": "Year"},
		"y": {"field": "disastertype", "type": "nominal", "title": ""},
		"size": {
			"field": "Total Deaths",
			"type": "quantitative",
			"scale": {
				"type": "threshold", 
				"domain": [10, 100, 1000, 10000, 100000, 200000],
				"range": [5, 20, 50, 100, 300, 500, 800]
			},
			"legend": null
		},
		"color": {
			"field": "disastertype",
			"scale": {"scheme": "dark2"},
			"legend": null
		},
		"tooltip": [
			{"field": "country", "type": "nominal", "title": "Country"},
			{"field": "location", "type": "nominal", "title": "Location"},
			{"field": "date", "type": "temporal", "title": "Date"},
			{"field": "Total Deaths", "type": "quantitative", "title": "Deaths"}
		]
	}
}