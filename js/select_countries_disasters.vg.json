{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Disasters by Country 1980-2018",
    "params": [
        {
            "name": "testCountrySelect",
            "value": [
                "Australia",
                "China",
                "India",
                "Japan",
                "Ethiopia"
            ]
        }
    ],
    "hconcat": [
        {
            "width": 500,
            "height": 256,
            "projection": {
                "type": "equalEarth"
            },
            "data": {
                "url": "https://raw.githubusercontent.com/OliverVoogd/FIT3179A2/master/data/countries.topo.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_50m_admin_0_countries"
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "geoshape",
                        "fill": "lightgrey"
                    }
                },
                {
                    "transform": [
                        {
                            "lookup": "properties.NAME",
                            "from": {
                                "data": {
                                    "url": "https://raw.githubusercontent.com/OliverVoogd/FIT3179A2/master/data/emdat_trimmed_joined_sedac_datefixed_choropleth.csv"
                                },
                                "key": "country",
                                "fields": [
                                    "cumulativeDeaths"
                                ]
                            }
                        }
                    ],
                    "params": [
                        {
                            "name": "countrySelect",
                            "select": {
                                "type": "point",
                                "fields": [
                                    "properties.NAME"
                                ]
                            }
                        }
                    ],
                    "mark": {
                        "type": "geoshape"
                    },
                    "encoding": {
                        "color": {
                            "field": "cumulativeDeaths",
                            "type": "quantitative",
                            "scale": {
                                "type": "threshold",
                                "domain": [
                                    10,
                                    100,
                                    1000,
                                    10000,
                                    100000,
                                    200000
                                ],
                                "scheme": "dark2"
                            },
                            "legend": {
                                "type": "symbol"
                            }
                        },
                        "opacity": {
                            "condition": {
                                "param": "countrySelect",
                                "value": 1
                            },
                            "value": 0.2
                        },
                        "tooltip": [
                            {
                                "field": "properties.NAME",
                                "type": "nominal",
                                "title": "Country"
                            },
                            {
                                "field": "cumulativeDeaths",
                                "type": "quantitative",
                                "title": "Total Deaths"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "width": 500,
            "height": 256,
            "data": {
                "url": "https://raw.githubusercontent.com/OliverVoogd/FIT3179A2/master/data/emdat_trimmed_joined_sedac_datefixed.csv"
            },
            "transform": [
                {
                    "filter": "datum.year >= 1980"
                },
                {
                    "filter": "indexof(testCountrySelect, datum.country) >= 0"
                }
            ],
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "country",
                    "type": "nominal",
                    "axis": {
                        "labelAngle": 0
                    },
                    "title": ""
                },
                "y": {
                    "aggregate": "count",
                    "type": "quantitative",
                    "title": "Disaster per Country"
                },
                "color": {
                    "field": "disastertype",
                    "type": "nominal",
                    "scale": {
                        "scheme": "dark2"
                    },
                    "legend": null
                }
            }
        }
    ],
    "config": {
        "concat": {
            "spacing": 100
        }
    }
}